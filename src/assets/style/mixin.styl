clearBoth()
    &:after
        clear both
        content '.'
        height 0
        line-height 0
        visibility hidden
        display block

borderBottom()
  border-bottom: 1px solid #f5f5f5

rem(size)
  unit(size, 'rem')

ellipsis()
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis

muitlLineEllipsis(line)
  text-overflow ellipsis
  display -webkit-box
  -webkit-box-orient vertical
  -webkit-line-clamp line
  overflow hidden

circleNotify(color)
  display inline-block
  width .1rem
  height .1rem
  background-color color
  border-radius 50%

tabsFixed()
  position fixed
  top $headerHeight
  left 0
  right 0
  z-index 99

tabFixed()
  position fixed
  top $headerHeight * 2
  bottom 0
  left 0
  right 0

mescroller()
  position fixed
  top $headerHeight * 2 - .1rem
  left 0
  right 0
  height 88%
  // height auto
  // bottom 0
  // background-color blue

normalTextStyle(color, size)
  color color
  font-size rem(size)
  line-height rem(size + 0.2)

beforeLine()
  display inline-block
  content ""
  background-color $primary
  width .08rem
  color $primary
  height .3rem
  margin-right .2rem
  vertical-align middle

horizontalLine(color, heightSize, marginTB = 0, marginLR = 0)
  background-color color
  height rem(heightSize)
  margin rem(marginTB) rem(marginLR)
